---
interface Props {
  size?: number;
  color?: string;
  className?: string;
}

const { size, color, className } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  class={className}
  width={size || 24}
  height={size || 24}
  viewBox="0 0 24 24"
  stroke-width="1"
  stroke={color || "#000000"}
  fill="none"
  stroke-linecap="round"
  stroke-linejoin="round"
>
  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
  <path d="M12 5l0 14"></path>
  <path d="M5 12l14 0"></path>
</svg>
