---
import { jobInfo } from "@/lib/jobTimeline";
import ItemTimeline from "./ItemTimeline.astro";
---

<section id="job-timeline" class="flex flex-col space-y-4">
  <h2 class="text-3xl font-semibold">Experiencia</h2>
  <ol class="relative border-s border-gray-200 dark:border-gray-700">
    {
      jobInfo.map((item) => (
        <ItemTimeline
          title={item.title}
          company={item.company}
          startDate={item.startDate}
          endDate={item.endDate}
          description={item.description}
          modality={item.modality}
          link={item.link}
          current={item.current}
          location={item.location}
        />
      ))
    }
  </ol>
</section>
