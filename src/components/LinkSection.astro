---
interface Props {
  href: string;
  target?: string;
}

const { href, target } = Astro.props;
---

<a
  href={href}
  target={target ?? "_self"}
  class="px-3 pr-4 py-2 border border-gray-400 rounded-full hover:bg-black hover:text-white transition-all duration-300 flex flex-row gap-2"
>
  <slot name="icon" />
  <slot />
</a>
